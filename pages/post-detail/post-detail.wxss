  width: 660rpx;
  height: 1px;
  background-color: #999;
  position: absolute;
  z-index:-999 ;
}
.circle image{
  width: 90rpx;
  height: 90rpx;

}
.share-img{
  margin-right: 30rpx;
}
.detail{
