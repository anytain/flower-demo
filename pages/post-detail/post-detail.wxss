.container{
  display: flex;
  flex-direction: column;
}
.head-image{
  width: 100%;
  height: 460rpx;
}
.author-date{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  margin-left: 30rpx;
}
.avatar{
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;

}
.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
}
.const-text{
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}
.date{
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
}
.title{
  font-size: 36rpx;
  font-weight: 700;
  margin-left: 20rpx;
  margin-top: 30rpx;
