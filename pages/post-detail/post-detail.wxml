<!--pages/post-detail/post-detail.wxml-->
<view class="container">
  <image  class="head-image" src="{{postData.headImgSrc}}"></image>
  <view class="author-date">
    <image class="avatar" src="{{postData.avatar}}"></image>
    <text class="author">{{postData.author}}</text>
    <text class="const-text">发表于</text>
    <text class="date">{{postData.dateTime}}</text>
  </view>
  <text class="title">{{postData.title}}</text>
  <view class="tool">
  <view class="circle">
    <image wx:if="{{collected}}" bindtap="onCollect" class="share-img"  src="/images/icon/collection.png"></image>
    <image wx:else="" bindtap="onCollect" class="share-img"  src="/images/icon/collection-anti.png"></image>

    <image class=""   src="/images/icon/share.png"></image>
  </view>
    <view class="horizon"></view>
  </view>
  <text class="detail">{{postData.detail}}</text>
</view>